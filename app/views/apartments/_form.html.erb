      <h2><%= pluralize(apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
        <% apartment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :numero, style: "display: block" %> 
    <%= form.text_field :numero %>
  </div>

  <div>
    <%= form.label :building_id, style: "display: block" %>
    <%= form.collection_select :building_id, @buildings, :id, :nombre, { include_blank: "Elige un edificio..." } %>
  </div>

  <div>
    <%= form.label :images, class:"form-label", for:"formFileMultiple" %>
    <%= form.file_field :images, multiple: true, class:"form-control", id:"formFileMultiple"  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>